<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/layout_notification_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="48dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/primary_text_default_material_light"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_notification_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016.02.01"
                android:textColor="@color/primary_text_disabled_material_light"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_notification_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="writer"
                android:textColor="@color/primary_text_disabled_material_light"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_notification_viewed_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_gravity="end|center_vertical"
        android:text="18"
        android:textSize="18sp"
        android:textColor="@color/secondary_text_default_material_light" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#e2e2e2">
    </FrameLayout>

</FrameLayout>